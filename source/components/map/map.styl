.map
   padding: 215px 0 200px
   &-bg
      background-image: url('/f/img/map.jpg')
      background-position: 50% 50%
      background-size: cover
      padding-bottom 50%
      background-repeat: no-repeat
   &-popup

      max-width: 370px
      position: fixed
      top: 20%
      display: flex
      flex-direction: column
      background-color: white
      box-shadow: 0px 10px 30px rgba(34, 31, 32, 0.15);
      padding: 30px 25px 70px
      &__cross
         position: absolute
         top: 30px
         right: 25px
         display: block
         width: 15px
         height: 15px
         cursor: pointer
         &::after
            content: ''
            display: block
            width: 100%
            height: 1px
            background-color: $text
            transform: rotate(45deg)
            position: absolute
            top: 6px
            left: 0
         &::before
            content: ''
            display: block
            width: 100%
            height: 1px
            background-color: $text
            transform: rotate(-45deg)
            position: absolute
            top: 6px
            left: 0
      &__item
         margin-bottom 15px
      &__title
         font-weight: 400
         font-size: 12px
         line-height: 1.2em
         opacity 0.5
         margin-bottom 5px
      &__text
         font-weight: 400
         font-size: 18px
         line-height: 1.3em
         opacity: 0.89

