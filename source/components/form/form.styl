.form
   background-color: white
   padding: 145px 0

   &-row
      font-weight: 400
      font-size: 12px
      line-height: 1.4em
      color: $text
      opacity: 0.6
   .title
      padding-bottom 55px
   &__inner
      &-block
         display: flex
         justify-content: space-between
         flex-grow: 1
      .form-field--textarea
         margin-bottom 100px
   &-agreemen
      display: flex
      align-items: center
      margin-bottom 20px
      .btn
         margin-right 50px
   &-field + &-field
      margin-left 30px
   &-field
      flex: 1 1 auto
      margin: 20px 0
      
      &__input
         border-bottom: solid 1px rgba(0,0,0,0.1)
         font-weight: 400
         font-size: 18px
         line-height: 1.3em
         opacity: 0.6
         padding-bottom 10px
      select
         border-bottom: solid 1px rgba(0,0,0,0.1)
         font-weight: 400
         font-size: 18px
         line-height: 1.3em
         opacity: 0.6
         padding-bottom 10px
         cursor: pointer
      textarea
         border-bottom: solid 1px rgba(0,0,0,0.1)
         width: 100%
         display: block
         resize: none
         font-weight: 400
         font-size: 18px
         line-height: 1.3em
         opacity: 0.6
      &--checkbox
         input
            appearance: none
            width: 1px
            height: 1px
            position: absolute
            left: -150%
      &__checked
         width: 20px
         height: 20px
         display: block
         border: solid 1px rgba(0,0,0,0.6)
         cursor: pointer
         margin-right 10px
      &__checkbox:checked + &__checked
         position: relative
         &:after
            content: ''
            display: block
            background-color: $orange
            width: 15px
            height: 15px
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
      &__label
         display: flex
         align-items: center
         cursor: pointer
      

.btn
   display: inline-block
   background: none
   &-radius
      button
         border-radius: 30px
   &--orange
      button
         background-color: $orange
   &-form
      button
         color: white
         font-weight: 500
         font-size: 14px
         line-height: 1.2em
         padding: 12px 32px
            