.header
	margin-bottom 50px
	&__inner
		padding: 10px 0
		display: flex
		justify-content: space-between
		align-items: center
		border-bottom 1px solid $orange
	&__burger
		display: block
		width: 30px
		height: 20px
		position: relative
		cursor: pointer
		&-inner
			display: block
			width: 100%
			height: 2px
			background-color: $text
			position: absolute
			left: 0
			top: 50%
			transform: translateY(-50%)
			&:after
				content: ''
				display: block
				width: 100%
				height: 2px
				background-color: $text
				position: absolute
				top: -10px
				left: 0
			&:before
				content: ''
				display: block
				width: 100%
				height: 2px
				background-color: $text
				position: absolute
				bottom: -10px
				left: 0
	&-right
		display: flex
		align-items: center
		&__text
			margin-right 50px
			a
				text-decoration: none
				color: $text
				transition: 0.3s
				&:hover
					text-decoration: underline
